<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a New Post</h1>
    <hr class="opacity-10 mt-3">
    <form class="pt-4" action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 " name="postimage"  type="file">
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" name="title"  type="text" placeholder="Title">
        <input class="text-black block w-1/3 h-40 px-3 py-2 border-2 mt-2 rounded-md"  type="textarea" placeholder="description">
        <input class="block w-.5/3 px-3 py-2  mt-2 rounded-md bg-red-500 hover:bg-red-700 text-xxl"  type="submit" value="Create post">
    </form>
</div>
